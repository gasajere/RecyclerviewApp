<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_playing"
        android:layout_width="13dp"
        android:layout_height="15dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:text="Work"
        app:layout_constraintStart_toEndOf="@+id/image_playing"
        app:layout_constraintTop_toTopOf="@+id/image_playing" />

    <TextView
        android:id="@+id/artiste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rihanna"
        app:layout_constraintStart_toStartOf="@+id/Song"
        app:layout_constraintTop_toBottomOf="@+id/Song" />


</androidx.constraintlayout.widget.ConstraintLayout>